<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mingzheng.customkeyboard.SecurityEditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="30dp"
        android:textSize="20sp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:letterSpacing="0.2"
        android:lineSpacingExtra="5dp"
        android:textColor="#333333"
        android:background="@drawable/et_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/r6_white_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="#333333"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/r6_white_bg"
                android:gravity="center"
                android:text="2"
                android:textColor="#333333"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/r6_white_bg"
                android:gravity="center"
                android:text="3"
                android:textColor="#333333"
                android:textSize="28sp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/number_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/r6_white_bg"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_weight="1"
                    android:src="@drawable/icon_key_border_delete" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/r6_white_bg"
                android:gravity="center"
                android:text="4"
                android:textColor="#333333"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/r6_white_bg"
                android:gravity="center"
                android:text="5"
                android:textColor="#333333"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/r6_white_bg"
                android:gravity="center"
                android:text="6"
                android:textColor="#333333"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number_all_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/r6_white_bg"
                android:gravity="center"
                android:text="清除"
                android:textColor="#333333"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/number_7"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/r6_white_bg"
                        android:gravity="center"
                        android:text="7"
                        android:textColor="#333333"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/number_8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/r6_white_bg"
                        android:gravity="center"
                        android:text="8"
                        android:textColor="#333333"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/number_9"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/r6_white_bg"
                        android:gravity="center"
                        android:text="9"
                        android:textColor="#333333"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/number_0"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/r6_white_bg"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#333333"
                    android:textSize="28sp"
                    android:textStyle="bold" />

            </LinearLayout>
             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:orientation="vertical">
                 <TextView
                     android:id="@+id/number_finish"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:layout_margin="5dp"
                     android:background="@drawable/r6_blue_bg"
                     android:gravity="center"
                     android:text="完成"
                     android:textColor="#ffffff"
                     android:textSize="20sp"
                     android:textStyle="bold" />
             </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>